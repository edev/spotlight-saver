<UserControl x:Class="SpotlightSaverGUI.SeparateOutputFolders"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SpotlightSaverGUI"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <GroupBox Header="Output folders">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="80" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>

            <Label Grid.Row="0" Grid.Column="0">Landscape:</Label>
            <local:FolderSelector Grid.Row="0" Grid.Column="1" />
            
            <Label Grid.Row="1" Grid.Column="0">Portrait:</Label>
            <local:FolderSelector Grid.Row="1" Grid.Column="1" />
            
            <Label Grid.Row="2" Grid.Column="0">Square:</Label>
            <local:FolderSelector Grid.Row="2" Grid.Column="1" />
        </Grid>
    </GroupBox>
</UserControl>
